<Page x:Class="HangmanClient.View.Pages.CreateMatch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Unloaded="CreateMatch_Unloaded"
      Background="White">

    <Grid>
        <!-- Contenedor principal dividido en contenido y botones inferiores -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Sección scrollable con salas -->
        
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <ListBox x:Name="SalasListBox" Margin="20" Height="228" Width="444">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="5">
                            <TextBlock Text="{Binding}" VerticalAlignment="Center" Width="200"/>
                            <Button Content="Unirse" Margin="10,0,0,0" Padding="5"
                                    Tag="{Binding}" Click="UnirseDirectoButton_Click"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
        
        <!-- Botones anclados abajo -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Crear partida"
                    Width="120" Margin="10"
                    Click="CrearSalaButton_Click"/>
            
            <Button Content="Unirse por código"
                    Width="150" Margin="10"
                    Click="UnirsePorCodigoButton_Click"/>
            <Button Content="Ver estadísticas"
                Width="140" Margin="10"
                Click="VerEstadisticasButton_Click"/>   
        </StackPanel>
    </Grid>
</Page>