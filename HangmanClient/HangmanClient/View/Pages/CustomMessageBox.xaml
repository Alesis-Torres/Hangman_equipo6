<Window x:Class="HangmanClient.View.Pages.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Titulo}" Height="180" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <TextBlock Text="{Binding Mensaje}" TextWrapping="Wrap" FontSize="14" Margin="0,10,0,40" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Width="80" Height="30" Margin="5" Content="{Binding TextoAceptar}" Click="Aceptar_Click"/>
            <Button Width="80" Height="30" Margin="5" Content="{Binding TextoCancelar}" Click="Cancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>