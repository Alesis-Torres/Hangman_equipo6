<Page x:Class="HangmanClient.View.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hangman_Client.View.Pages"
      mc:Ignorable="d" 
      xmlns:res="clr-namespace:HangmanClient"
      d:DesignHeight="600" d:DesignWidth="1026"
      Title="Login">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/View/Images/login_background.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Center">

            <Image Source="/View/Images/game_title.png" Width="655" Height="110"/>

            <TextBlock Text="{x:Static res:Literals.LogIn}"
                       FontSize="50" 
                       FontFamily="{StaticResource RubikBubbles}"
                       HorizontalAlignment="Center" 
                       Foreground="#FFFBD4"
                       Margin="0,10,0,20">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black"
                                      Direction="0"
                                      ShadowDepth="5"
                                      Opacity="1"
                                      BlurRadius="0"/>
                </TextBlock.Effect>
            </TextBlock>

            <StackPanel>
                <TextBlock Text="{x:Static res:Literals.User}"
                           FontSize="30" 
                           FontFamily="{StaticResource RubikBubbles}"
                           HorizontalAlignment="Center" 
                           Foreground="#FFFBD4">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black"
                              Direction="0"
                              ShadowDepth="5"
                              Opacity="1"
                              BlurRadius="0"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBox x:Name="UsernameTextBox"
                         Height="90"
                         Width="600"
                         Padding="30,0,20,0"
                         FontFamily="{StaticResource RubikBubbles}"
                         FontSize="30"
                         Background="Transparent"
                         BorderThickness="0"
                         VerticalContentAlignment="Center">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Grid>
                                <Image Source="/View/Images/wood_textbox.png" Stretch="Fill"/>

                                <ScrollViewer x:Name="PART_ContentHost"
                                  VerticalAlignment="Center"
                                  Focusable="false">
                                    <ScrollViewer.Effect>
                                        <DropShadowEffect Color="Black"
                                              Direction="0"
                                              ShadowDepth="5"
                                              Opacity="1"
                                              BlurRadius="0"/>
                                    </ScrollViewer.Effect>
                                </ScrollViewer>
                            </Grid>
                        </ControlTemplate>
                    </TextBox.Template>
                    <TextBox.Foreground>
                        <SolidColorBrush Color="#FFFBD4"/>
                    </TextBox.Foreground>
                </TextBox>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="{x:Static res:Literals.Password}"
                           FontSize="30" 
                           FontFamily="{StaticResource RubikBubbles}"
                           HorizontalAlignment="Center" 
                           Foreground="#FFFBD4">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black"
                                          Direction="0"
                                          ShadowDepth="5"
                                          Opacity="1"
                                          BlurRadius="0"/>
                    </TextBlock.Effect>
                </TextBlock>
                <PasswordBox x:Name="PasswordBox"
                             Height="90"
                             Width="600"
                             Padding="30,0,20,0"
                             FontFamily="{StaticResource RubikBubbles}"
                             FontSize="30"
                             VerticalContentAlignment="Center"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="#FFFBD4">
                    <PasswordBox.Template>
                        <ControlTemplate TargetType="PasswordBox">
                            <Grid>
                                <Image Source="/View/Images/wood_textbox.png" Stretch="Fill"/>

                                <ScrollViewer x:Name="PART_ContentHost"
                                  VerticalAlignment="Center"
                                  Focusable="false"
                                  Padding="{TemplateBinding Padding}">
                                    <ScrollViewer.Effect>
                                        <DropShadowEffect Color="Black"
                                              Direction="0"
                                              ShadowDepth="5"
                                              Opacity="1"
                                              BlurRadius="0"/>
                                    </ScrollViewer.Effect>
                                </ScrollViewer>
                            </Grid>
                        </ControlTemplate>
                    </PasswordBox.Template>
                </PasswordBox>

            </StackPanel>

            <Button Click="RegisterButton_Click" Height="39" Width="600" VerticalAlignment="Bottom" Background="Transparent" BorderBrush="Transparent" Cursor="Hand">
                <Label x:Name="MatchCode" Content="{x:Static res:Literals.IDontHaveAnAccount_Yet}"
                   HorizontalAlignment="Center" 
                   FontFamily="{StaticResource RubikBubbles}" 
                   FontSize="25"
                   Foreground="#FFFBD4">
                    <Label.Effect>
                        <DropShadowEffect Color="Black"
                              Direction="0"
                              ShadowDepth="5"
                              Opacity="1"
                              BlurRadius="0"/>
                    </Label.Effect>
                </Label>
            </Button>
            <Button x:Name="LoginButton" Width="330" Height="55" Click="LoginButton_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/View/Images/wood_button.png"/>
                </Button.Background>
                <Label x:Name="AcceptButtonText" Content="{x:Static res:Literals.Enter}" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center" 
                       FontFamily="{StaticResource RubikBubbles}" 
                       Foreground="#FFFBD4" 
                       FontSize="30">
                    <Label.Effect>
                        <DropShadowEffect Color="Black"
                                  Direction="0"
                                  ShadowDepth="5"
                                  Opacity="1"
                                  BlurRadius="0"/>
                    </Label.Effect>
                </Label>
            </Button>
        </StackPanel>
        <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Bottom">

            <Label Content="{x:Static res:Literals.Language}" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   FontFamily="{StaticResource RubikBubbles}" 
                   Foreground="#FFFBD4" 
                   FontSize="20">
                <Label.Effect>
                    <DropShadowEffect Color="Black"
                                      Direction="0"
                                      ShadowDepth="5"
                                      Opacity="1"
                                      BlurRadius="0"/>
                </Label.Effect>
            </Label>

            <Button x:Name="SpanishButton" Padding="30,0,30,0" Height="55" Click="SpanishButton_Click" Margin="0,0,10,10">
                <Button.Background>
                    <ImageBrush ImageSource="/View/Images/wood_button.png"/>
                </Button.Background>
                <Label x:Name="SpanishButtonText" Content="{x:Static res:Literals.Spanish}" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center" 
                       FontFamily="{StaticResource RubikBubbles}" 
                       Foreground="#FFFBD4" 
                       FontSize="20">
                    <Label.Effect>
                        <DropShadowEffect Color="Black"
                                          Direction="0"
                                          ShadowDepth="5"
                                          Opacity="1"
                                          BlurRadius="0"/>
                    </Label.Effect>
                </Label>
            </Button>
            <Button x:Name="EnglishButton" Padding="30,0,30,0" Height="55" Click="EnglishButton_Click" Margin="0,0,10,10">
                <Button.Background>
                    <ImageBrush ImageSource="/View/Images/wood_button.png"/>
                </Button.Background>
                <Label x:Name="EnglishButtonText" Content="{x:Static res:Literals.English}" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center" 
                       FontFamily="{StaticResource RubikBubbles}" 
                       Foreground="#FFFBD4" 
                       FontSize="20">
                    <Label.Effect>
                        <DropShadowEffect Color="Black"
                              Direction="0"
                              ShadowDepth="5"
                              Opacity="1"
                              BlurRadius="0"/>
                    </Label.Effect>
                </Label>
            </Button>
        </StackPanel>
    </Grid>
</Page>
