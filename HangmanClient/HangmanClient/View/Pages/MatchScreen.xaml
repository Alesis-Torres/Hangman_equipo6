<Page x:Class="HangmanClient.View.Pages.MatchScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MatchScreen">

    <Grid>
        <StackPanel x:Name="ChallengerPanel" Visibility="Collapsed" Margin="10">
            <TextBlock Text="Vista del Challenger" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock x:Name="ChallengerPalabraEstadoTextBlock" Text="Estado de la palabra" FontSize="16" Margin="0,0,0,10"/>
            <TextBlock Text="Letra propuesta:" FontSize="14" Margin="0,10,0,0"/>
            <TextBlock x:Name="LetraPropuestaTextBlock" Text="" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Confirmar Letra" Width="150" Height="30" Click="ConfirmarLetra_Click" Margin="0,0,10,0"/>
                <Button Content="Rechazar Letra" Width="150" Height="30" Click="RechazarLetra_Click"/>
            </StackPanel>

            <StackPanel x:Name="ChallengerIntentosPanel" Orientation="Horizontal" HorizontalAlignment="Left"/>
        </StackPanel>

        <StackPanel x:Name="GuessPanel" Visibility="Collapsed" Margin="10">
            <TextBlock Text="Vista del Guesser" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock x:Name="PalabraEstadoTextBlock" Text="Estado de la palabra" FontSize="16" Margin="0,0,0,10"/>

            <TextBlock Text="Letra propuesta:" FontSize="14" Margin="0,10,0,0"/>

            <StackPanel x:Name="IntentosPanel" Orientation="Horizontal" HorizontalAlignment="Left"/>
            <WrapPanel x:Name="QwertyKeyboardPanel" Margin="0,10,0,0"/>
        </StackPanel>

        <Grid x:Name="OverlayPalabras" Visibility="Collapsed" Background="#80000000">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
                <TextBlock Text="Selecciona una palabra para el juego:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListBox x:Name="ListaPalabras" Height="150" Width="200" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Seleccionar Palabra" Width="150" Height="30" Margin="0,0,10,0" Click="SeleccionarPalabra_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>