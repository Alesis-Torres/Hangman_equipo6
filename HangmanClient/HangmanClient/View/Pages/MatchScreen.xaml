<Page x:Class="HangmanClient.View.Pages.MatchScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hangman_Client.View.Pages"
      mc:Ignorable="d" 
      xmlns:res="clr-namespace:HangmanClient"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MatchScreen">

    <Grid>
        <Border x:Name="EsperandoOverlay"
        Background="#80000000"
        Visibility="Collapsed"
        Grid.RowSpan="2"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Panel.ZIndex="10">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Background="White">
                <TextBlock Text="Esperando al otro jugador..."
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   TextAlignment="Center"/>
                <ProgressBar Width="200" Height="20" IsIndeterminate="True"/>
            </StackPanel>
        </Border>
        <!-- Panel Challenger -->
        <StackPanel x:Name="ChallengerPanel" Visibility="Visible" Margin="10">
            <TextBlock Text="Panel challenger"            
                       FontSize="30" 
                       Foreground="#FFFBD4">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black"
                                      Direction="0"
                                      ShadowDepth="5"
                                      Opacity="1"
                                      BlurRadius="0"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock x:Name="ChallengerPalabraEstadoTextBlock" Text="" FontSize="16" Foreground="Black"/>
            <Grid x:Name="ChallengerIntentosPanel"  Height="33" Width="49">

                <Image x:Name="Ch_Torso" Source="/View/Images/GameLogic/torso_center.png" Width="40" Visibility="Visible" Margin="59,50,72,49"/>
                <Image x:Name="Ch_LeftArm" Source="/View/Images/GameLogic/left_arm.png" Visibility="Visible" Margin="10,48,171,24"/>
                <Image x:Name="Ch_RightArm" Source="/View/Images/GameLogic/right_arm.png" Visibility="Visible" Margin="170,80,10,79"/>
                <Image x:Name="Ch_LeftLeg" Source="/View/Images/GameLogic/left_leg.png" Visibility="Visible" Margin="68,147,140,64"/>
                <Image x:Name="Ch_RightLeg" Source="/View/Images/GameLogic/right_leg.png" Visibility="Visible" Margin="133,145,75,52"/>
                <Image x:Name="Ch_Head" Source="/View/Images/GameLogic/head_center.png" Visibility="Visible" Margin="0,-26,61,111"/>
            </Grid>
            <TextBlock Text="Estado palabra"            
                       FontSize="15" 
                       Foreground="#FFFBD4">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black"
                                      Direction="0"
                                      ShadowDepth="2"
                                      Opacity="1"
                                      BlurRadius="0"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock x:Name="LetraPropuestaTextBlock" Text="" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="Black"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center">
                <Button x:Name="ConfirmLetterButton" Padding="30,0,30,0" Height="30" Click="ConfirmarLetra_Click" Margin="0,0,10,0">
                    <Label x:Name="ConfirmLetterButtonText" Content="Confirmar letra" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center" 
                            Foreground="#FFFBD4" 
                            FontSize="15">
                        <Label.Effect>
                            <DropShadowEffect Color="Black"
                               Direction="0"
                               ShadowDepth="2"
                               Opacity="1"
                               BlurRadius="0"/>
                        </Label.Effect>
                    </Label>
                </Button>
                <Button x:Name="DeclineLetterButton" Padding="30,0,30,0" Height="30" Click="RechazarLetra_Click" Margin="0,0,10,0">
                    <Label x:Name="DeclineLetterButtonText" Content="Rechazar letra" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center" 
                            Foreground="#FFFBD4" 
                            FontSize="15">
                        <Label.Effect>
                            <DropShadowEffect Color="Black"
                                               Direction="0"
                                               ShadowDepth="2"
                                               Opacity="1"
                                               BlurRadius="0"/>
                        </Label.Effect>
                    </Label>
                </Button>
            </StackPanel>
            <TextBlock x:Name="CodigoSalaTextBlock"
           Text="Código de sala: ####"
           FontSize="16"
           FontWeight="Bold"
           HorizontalAlignment="Center"
           Margin="0,10,0,0"
           Foreground="DarkSlateGray"/>
            <StackPanel x:Name="ChallengerJugadoresPanel" Margin="10">
                <TextBlock Text="Intentos"            
           FontSize="15" 
           Foreground="#FFFBD4">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black"
                          Direction="0"
                          ShadowDepth="2"
                          Opacity="1"
                          BlurRadius="0"/>
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <!-- Panel Guess -->
        <StackPanel x:Name="GuessPanel" Visibility="Visible" Margin="10" Background="White">
            <TextBlock Text="Jugadores en partida"/>

            <TextBlock x:Name="PalabraEstadoTextBlock" Text="Estado de la palabra" FontSize="16" Margin="0,0,0,10" Foreground="Black"/>

            <Grid x:Name="IntentosPanel" Height="221" Width="212">
                <Image x:Name="Torso" Source="/View/Images/GameLogic/torso_center.png" Visibility="Hidden" Margin="59,50,72,49"/>
                <Image x:Name="LeftArm" Source="/View/Images/GameLogic/left_arm.png" Visibility="Hidden" Margin="28,50,103,49"/>
                <Image x:Name="RightArm" Source="/View/Images/GameLogic/right_arm.png" Visibility="Hidden" Margin="89,43,42,41"/>
                <Image x:Name="LeftLeg" Source="/View/Images/GameLogic/left_leg.png" Visibility="Hidden" Margin="31,87,91,2"/>
                <Image x:Name="RightLeg" Source="/View/Images/GameLogic/right_leg.png" Visibility="Hidden" Margin="76,87,48,2"/>
                <Image x:Name="Head" Source="/View/Images/GameLogic/head_center.png" Visibility="Hidden" Margin="19,-11,35,75"/>
            </Grid>
            <WrapPanel x:Name="QwertyKeyboardPanel" Margin="0,10,0,0"/>
            <StackPanel x:Name="GuessJugadoresPanel" Margin="10">

            </StackPanel>
        </StackPanel>

        <!-- Overlay de Palabras y Categorías -->
        <Grid x:Name="OverlayPalabras" Background="#AA000000" Visibility="Collapsed">
            <Border Padding="20" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="800"  MaxHeight="600">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="5">
                        <TextBlock Text="Categorias"
                                   FontSize="18" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"
                                   Foreground="#FFFBD4">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black"
                                  Direction="0"
                                  ShadowDepth="5"
                                  Opacity="1"
                                  BlurRadius="0"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                            <ListBox x:Name="CategoriasListBox"
                                     SelectionChanged="CategoriasListBox_SelectionChanged"
                                     MinHeight="400">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Image Source="{Binding Image}" Width="40" Height="40" Margin="5"/>
                                            <TextBlock Text="{Binding Name}" FontSize="14" VerticalAlignment="Center" Grid.Column="1" Margin="5"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>
                    </StackPanel>

                    <!-- Panel de Palabras -->
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="5">
                        <ItemsControl x:Name="ListaPalabras">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Click="SeleccionarPalabra_Click" Padding="0" Margin="5" BorderThickness="0" Background="Transparent">
                                        <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5" CornerRadius="8" Background="White" Width="120" Height="140">
                                            <StackPanel>
                                                <Image Source="{Binding Image}" Width="80" Height="80" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding Name}" FontSize="14" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        <Border x:Name="InicioOverlay"
        Background="#B0000000"
        Visibility="Collapsed"
        Grid.RowSpan="2"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Panel.ZIndex="11">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Background="White" >
                <TextBlock Text="¡Partida Iniciada!" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="Green"
                   TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>