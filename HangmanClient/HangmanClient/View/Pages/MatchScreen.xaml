<Page x:Class="HangmanClient.View.Pages.MatchScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hangman_Client.View.Pages"
      mc:Ignorable="d" 
      xmlns:res="clr-namespace:HangmanClient"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MatchScreen">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/View/Images/town_background.png"/>
        </Grid.Background>
        <!-- Panel Challenger -->
        <StackPanel x:Name="ChallengerPanel" Visibility="Collapsed" Margin="10">
            <TextBlock Text="{x:Static res:Literals.ChallengerView}"            
                       FontSize="30" 
                       FontFamily="{StaticResource RubikBubbles}"
                       Foreground="#FFFBD4">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black"
                                      Direction="0"
                                      ShadowDepth="5"
                                      Opacity="1"
                                      BlurRadius="0"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock x:Name="ChallengerPalabraEstadoTextBlock" Text="Estado de la palabra" FontSize="16" Margin="0,0,0,10" Foreground="White"/>
            <TextBlock Text="{x:Static res:Literals.ProposedLetter}"            
                       FontSize="15" 
                       FontFamily="{StaticResource RubikBubbles}"
                       Foreground="#FFFBD4">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black"
                                      Direction="0"
                                      ShadowDepth="2"
                                      Opacity="1"
                                      BlurRadius="0"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock x:Name="LetraPropuestaTextBlock" Text="" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="White"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center">
                <Button x:Name="ConfirmLetterButton" Padding="30,0,30,0" Height="30" Click="ConfirmarLetra_Click" Margin="0,0,10,0">
                    <Button.Background>
                        <ImageBrush ImageSource="/View/Images/wood_button.png"/>
                    </Button.Background>
                    <Label x:Name="ConfirmLetterButtonText" Content="{x:Static res:Literals.ConfirmLetter}" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center" 
                            FontFamily="{StaticResource RubikBubbles}" 
                            Foreground="#FFFBD4" 
                            FontSize="15">
                        <Label.Effect>
                            <DropShadowEffect Color="Black"
                               Direction="0"
                               ShadowDepth="2"
                               Opacity="1"
                               BlurRadius="0"/>
                        </Label.Effect>
                    </Label>
                </Button>
                <Button x:Name="DeclineLetterButton" Padding="30,0,30,0" Height="30" Click="RechazarLetra_Click" Margin="0,0,10,0">
                    <Button.Background>
                        <ImageBrush ImageSource="/View/Images/wood_button.png"/>
                    </Button.Background>
                    <Label x:Name="DeclineLetterButtonText" Content="{x:Static res:Literals.DeclineLetter}" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center" 
                            FontFamily="{StaticResource RubikBubbles}" 
                            Foreground="#FFFBD4" 
                            FontSize="15">
                        <Label.Effect>
                            <DropShadowEffect Color="Black"
                                               Direction="0"
                                               ShadowDepth="2"
                                               Opacity="1"
                                               BlurRadius="0"/>
                        </Label.Effect>
                    </Label>
                </Button>
            </StackPanel>
            <StackPanel x:Name="ChallengerIntentosPanel" Orientation="Horizontal" HorizontalAlignment="Left"/>
            <StackPanel x:Name="ChallengerJugadoresPanel" Margin="10">
                <TextBlock Text="{x:Static res:Literals.PlayersInMatch}"            
           FontSize="15" 
           FontFamily="{StaticResource RubikBubbles}"
           Foreground="#FFFBD4">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black"
                          Direction="0"
                          ShadowDepth="2"
                          Opacity="1"
                          BlurRadius="0"/>
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <!-- Panel Guess -->
        <StackPanel x:Name="GuessPanel" Visibility="Collapsed" Margin="10">
            <TextBlock Text="{x:Static res:Literals.GuesserView}"            
                       FontSize="30" 
                       FontFamily="{StaticResource RubikBubbles}"
                       Foreground="#FFFBD4">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black"
                                      Direction="0"
                                      ShadowDepth="5"
                                      Opacity="1"
                                      BlurRadius="0"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock x:Name="PalabraEstadoTextBlock" Text="Estado de la palabra" FontSize="16" Margin="0,0,0,10" Foreground="White"/>
            <TextBlock Text="{x:Static res:Literals.ProposedLetter}"            
                       FontSize="15" 
                       FontFamily="{StaticResource RubikBubbles}"
                       Foreground="#FFFBD4">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black"
                          Direction="0"
                          ShadowDepth="5"
                          Opacity="1"
                          BlurRadius="0"/>
                </TextBlock.Effect>
            </TextBlock>
            <StackPanel x:Name="IntentosPanel" Orientation="Horizontal" HorizontalAlignment="Left"/>
            <WrapPanel x:Name="QwertyKeyboardPanel" Margin="0,10,0,0"/>
            <StackPanel x:Name="GuessJugadoresPanel" Margin="10">
                <TextBlock Text="{x:Static res:Literals.PlayersInMatch}"            
                           FontSize="15" 
                           FontFamily="{StaticResource RubikBubbles}"
                           Foreground="#FFFBD4">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black"
                                          Direction="0"
                                          ShadowDepth="5"
                                          Opacity="1"
                                          BlurRadius="0"/>
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <!-- Overlay de Palabras y Categorías -->
        <Grid x:Name="OverlayPalabras" Background="#AA000000" Visibility="Collapsed">
            <Border Padding="20" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="800"  MaxHeight="600">
                <Border.Background>
                    <ImageBrush ImageSource="/View/Images/rooms_table.png"/>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Panel de Categorías -->
                    <StackPanel Grid.Column="0" Margin="5">
                        <StackPanel.Background>
                            <ImageBrush ImageSource="/View/Images/categories_background.png"/>
                        </StackPanel.Background>
                        <TextBlock Text="{x:Static res:Literals.Categories}"
                                   FontSize="18" 
                                   FontFamily="{StaticResource RubikBubbles}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"
                                   Foreground="#FFFBD4">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black"
                                  Direction="0"
                                  ShadowDepth="5"
                                  Opacity="1"
                                  BlurRadius="0"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                            <ListBox x:Name="CategoriasListBox"
                                     SelectionChanged="CategoriasListBox_SelectionChanged"
                                     MinHeight="400">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Image Source="{Binding Image}" Width="40" Height="40" Margin="5"/>
                                            <TextBlock Text="{Binding Name}" FontSize="14" VerticalAlignment="Center" Grid.Column="1" Margin="5"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>
                    </StackPanel>

                    <!-- Panel de Palabras -->
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="5">
                        <ItemsControl x:Name="ListaPalabras">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Click="SeleccionarPalabra_Click" Padding="0" Margin="5" BorderThickness="0" Background="Transparent">
                                        <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5" CornerRadius="8" Background="White" Width="120" Height="140">
                                            <StackPanel>
                                                <Image Source="{Binding Image}" Width="80" Height="80" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding Name}" FontSize="14" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>