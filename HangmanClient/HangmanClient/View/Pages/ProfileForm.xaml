<Page x:Class="HangmanClient.View.Pages.ProfileForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hangman_Client.View.Pages"
      mc:Ignorable="d" 
      xmlns:res="clr-namespace:HangmanClient"
      d:DesignHeight="600" d:DesignWidth="1026"
      Title="ProfileForm">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid.Background>
            <ImageBrush ImageSource="/View/Images/login_background.png"/>
        </Grid.Background>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
            <Button x:Name="SpanishButton" Height="80" Width="170" Click="ReturnButton_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/View/Images/arrow_button.png"/>
                </Button.Background>
            </Button>
            <TextBlock Text="{x:Static res:Literals.EditProfile}"
                       FontSize="50" 
                       FontFamily="{StaticResource RubikBubbles}"
                       VerticalAlignment="Center"
                       Foreground="#FFFBD4">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black"
                          Direction="0"
                          ShadowDepth="5"
                          Opacity="1"
                          BlurRadius="0"/>
                </TextBlock.Effect>
            </TextBlock>
        </StackPanel>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{x:Static res:Literals.User}"
                            FontSize="30" 
                            FontFamily="{StaticResource RubikBubbles}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Foreground="#FFFBD4">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black"
                           Direction="0"
                           ShadowDepth="5"
                           Opacity="1"
                           BlurRadius="0"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBox x:Name="UsernameTextBox" TextChanged="UsernameTextBox_TextChanged"
                         Height="70"
                         Width="420"
                         Padding="30,0,20,0"
                         FontFamily="{StaticResource RubikBubbles}"
                         FontSize="30"
                         Background="Transparent"
                         BorderThickness="0"
                         VerticalContentAlignment="Center">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Grid>
                                <Image Source="/View/Images/wood_textbox.png" Stretch="Fill"/>
                                <ScrollViewer x:Name="PART_ContentHost"
                                              VerticalAlignment="Center"
                                              Focusable="false">
                                    <ScrollViewer.Effect>
                                        <DropShadowEffect Color="Black"
                                                          Direction="0"
                                                          ShadowDepth="5"
                                                          Opacity="1"
                                                          BlurRadius="0"/>
                                    </ScrollViewer.Effect>
                                </ScrollViewer>
                            </Grid>
                        </ControlTemplate>
                    </TextBox.Template>
                    <TextBox.Foreground>
                        <SolidColorBrush Color="#FFFBD4"/>
                    </TextBox.Foreground>
                </TextBox>
                <Label x:Name="UsernameStatusLabel" Foreground="Red" Visibility="Collapsed" Content=""/>
            </StackPanel>
            <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{x:Static res:Literals.DateBirth}"
                            FontSize="30" 
                            FontFamily="{StaticResource RubikBubbles}"
                            VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                            Foreground="#FFFBD4">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black"
                           Direction="0"
                           ShadowDepth="5"
                           Opacity="1"
                           BlurRadius="0"/>
                    </TextBlock.Effect>
                </TextBlock>
                <DatePicker x:Name="BirthdatePicker"
                            Height="70"
                            Width="420"
                            Margin="0,5"
                            FontSize="30"
                            FontFamily="{StaticResource RubikBubbles}"
                            Foreground="#FFFBD4"
                            Background="Transparent"
                            BorderThickness="0">
                    <DatePicker.Resources>
                        <Style TargetType="DatePickerTextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DatePickerTextBox">
                                        <Grid>
                                            <Image Source="/View/Images/wood_textbox.png" Stretch="Fill"/>
                                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="30,0,20,0"
                                          VerticalAlignment="Center"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="#FFFBD4"/>
                            <Setter Property="FontFamily" Value="{StaticResource RubikBubbles}"/>
                            <Setter Property="FontSize" Value="30"/>
                            <Setter Property="Padding" Value="0"/>
                        </Style>
                    </DatePicker.Resources>

                    <DatePicker.Effect>
                        <DropShadowEffect Color="Black"
                          Direction="0"
                          ShadowDepth="5"
                          Opacity="1"
                          BlurRadius="0"/>
                    </DatePicker.Effect>
                </DatePicker>



                <!--<DatePicker x:Name="BirthdatePicker" Margin="0,5" Height="70" Width="420"/>-->
            </StackPanel>
            <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{x:Static res:Literals.Password}"
                            FontSize="30" 
                            FontFamily="{StaticResource RubikBubbles}"
                            VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                            Foreground="#FFFBD4">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black"
                                           Direction="0"
                                           ShadowDepth="5"
                                           Opacity="1"
                                           BlurRadius="0"/>
                    </TextBlock.Effect>
                </TextBlock>
                <PasswordBox x:Name="PasswordBox" PreviewTextInput="PasswordBox_PreviewTextInput"
                              Height="70"
                              Width="420"
                              Padding="30,0,20,0"
                              FontFamily="{StaticResource RubikBubbles}"
                              FontSize="30"
                              VerticalContentAlignment="Center"
                              Background="Transparent"
                              BorderThickness="0"
                              Foreground="#FFFBD4"> 
                    <PasswordBox.Template>
                        <ControlTemplate TargetType="PasswordBox">
                            <Grid>
                                <Image Source="/View/Images/wood_textbox.png" Stretch="Fill"/>

                                <ScrollViewer x:Name="PART_ContentHost"
                                               VerticalAlignment="Center"
                                               Focusable="false"
                                               Padding="{TemplateBinding Padding}">
                                    <ScrollViewer.Effect>
                                        <DropShadowEffect Color="Black"
                                                           Direction="0"
                                                           ShadowDepth="5"
                                                           Opacity="1"
                                                           BlurRadius="0"/>
                                    </ScrollViewer.Effect>
                                </ScrollViewer>
                            </Grid>
                        </ControlTemplate>
                    </PasswordBox.Template>
                </PasswordBox>
            </StackPanel>

            <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{x:Static res:Literals.Name}"
                             FontSize="30" 
                             FontFamily="{StaticResource RubikBubbles}"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             Foreground="#FFFBD4">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black"
                             Direction="0"
                             ShadowDepth="5"
                             Opacity="1"
                             BlurRadius="0"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBox x:Name="NicknameTextBox" TextChanged="NicknameTextBox_TextChanged"
                         Height="70"
                         Width="420"
                         Padding="30,0,20,0"
                         FontFamily="{StaticResource RubikBubbles}"
                         FontSize="30"
                         Background="Transparent"
                         BorderThickness="0"
                         VerticalContentAlignment="Center">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Grid>
                                <Image Source="/View/Images/wood_textbox.png" Stretch="Fill"/>
                                <ScrollViewer x:Name="PART_ContentHost"
                              VerticalAlignment="Center"
                              Focusable="false">
                                    <ScrollViewer.Effect>
                                        <DropShadowEffect Color="Black"
                                          Direction="0"
                                          ShadowDepth="5"
                                          Opacity="1"
                                          BlurRadius="0"/>
                                    </ScrollViewer.Effect>
                                </ScrollViewer>
                            </Grid>
                        </ControlTemplate>
                    </TextBox.Template>
                    <TextBox.Foreground>
                        <SolidColorBrush Color="#FFFBD4"/>
                    </TextBox.Foreground>
                </TextBox>
                <Label x:Name="NicknameStatusLabel" Foreground="Red" Visibility="Collapsed" Content=""/>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{x:Static res:Literals.PhoneNumber}"
                            FontSize="30" 
                            FontFamily="{StaticResource RubikBubbles}"
                            VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                            Foreground="#FFFBD4">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black"
                           Direction="0"
                           ShadowDepth="5"
                           Opacity="1"
                           BlurRadius="0"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBox x:Name="PhoneNumberTextBox" TextChanged="PhoneNumberTextBox_TextChanged" MaxLength="10"
                         Height="70"
                         Width="420"
                         Padding="30,0,20,0"
                         FontFamily="{StaticResource RubikBubbles}"
                         FontSize="30"
                         Background="Transparent"
                         BorderThickness="0"
                         VerticalContentAlignment="Center">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Grid>
                                <Image Source="/View/Images/wood_textbox.png" Stretch="Fill"/>
                                <ScrollViewer x:Name="PART_ContentHost"
                              VerticalAlignment="Center"
                              Focusable="false">
                                    <ScrollViewer.Effect>
                                        <DropShadowEffect Color="Black"
                                          Direction="0"
                                          ShadowDepth="5"
                                          Opacity="1"
                                          BlurRadius="0"/>
                                    </ScrollViewer.Effect>
                                </ScrollViewer>
                            </Grid>
                        </ControlTemplate>
                    </TextBox.Template>
                    <TextBox.Foreground>
                        <SolidColorBrush Color="#FFFBD4"/>
                    </TextBox.Foreground>
                </TextBox>
                <Label x:Name="PhoneStatusLabel" Foreground="Red" Visibility="Collapsed" Content="" />
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{x:Static res:Literals.Email}"
                             FontSize="30" 
                             FontFamily="{StaticResource RubikBubbles}"
                             VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                             Foreground="#FFFBD4">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black"
                            Direction="0"
                            ShadowDepth="5"
                            Opacity="1"
                            BlurRadius="0"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBox x:Name="EmailTextBox" TextChanged="EmailTextBox_TextChanged"
                         Height="70"
                         Width="420"
                         Padding="30,0,20,0"
                         FontFamily="{StaticResource RubikBubbles}"
                         FontSize="30"
                         Background="Transparent"
                         BorderThickness="0"
                         VerticalContentAlignment="Center">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Grid>
                                <Image Source="/View/Images/wood_textbox.png" Stretch="Fill"/>
                                <ScrollViewer x:Name="PART_ContentHost"
                              VerticalAlignment="Center"
                              Focusable="false">
                                    <ScrollViewer.Effect>
                                        <DropShadowEffect Color="Black"
                                          Direction="0"
                                          ShadowDepth="5"
                                          Opacity="1"
                                          BlurRadius="0"/>
                                    </ScrollViewer.Effect>
                                </ScrollViewer>
                            </Grid>
                        </ControlTemplate>
                    </TextBox.Template>
                    <TextBox.Foreground>
                        <SolidColorBrush Color="#FFFBD4"/>
                    </TextBox.Foreground>
                </TextBox>
                <Label x:Name="EmailFormatStatusLabel" Foreground="Red" Visibility="Collapsed" Content=""/>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="2" VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelButton" Padding="30,0,30,0" Height="55" Click="SaveButton_Click" Margin="0,0,10,10">
                <Button.Background>
                    <ImageBrush ImageSource="/View/Images/wood_button.png"/>
                </Button.Background>
                <Label x:Name="CancelButtonText" Content="{x:Static res:Literals.Cancel}" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center" 
                       FontFamily="{StaticResource RubikBubbles}" 
                       Foreground="#FFFBD4" 
                       FontSize="20">
                    <Label.Effect>
                        <DropShadowEffect Color="Black"
                              Direction="0"
                              ShadowDepth="5"
                              Opacity="1"
                              BlurRadius="0"/>
                    </Label.Effect>
                </Label>
            </Button>
            <Button x:Name="ConfirmButton" Padding="30,0,30,0" Height="55" Click="SaveButton_Click" Margin="0,0,10,10">
                <Button.Background>
                    <ImageBrush ImageSource="/View/Images/wood_button.png"/>
                </Button.Background>
                <Label x:Name="ConfirmButtonText" Content="{x:Static res:Literals.Confirm}" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center" 
                           FontFamily="{StaticResource RubikBubbles}" 
                           Foreground="#FFFBD4" 
                           FontSize="20">
                    <Label.Effect>
                        <DropShadowEffect Color="Black"
                                  Direction="0"
                                  ShadowDepth="5"
                                  Opacity="1"
                                  BlurRadius="0"/>
                    </Label.Effect>
                </Label>
            </Button>
        </StackPanel>
    </Grid>
</Page>